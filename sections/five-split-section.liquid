<style>
  :root {
    /* Overlay gris para cada sección */
    --section1-bg-color: rgba(128, 128, 128, 0.7);
    --section2-bg-color: rgba(128, 128, 128, 0.7);
    --section3-bg-color: rgba(128, 128, 128, 0.7);
    --section4-bg-color: rgba(128, 128, 128, 0.7);
    --section5-bg-color: rgba(128, 128, 128, 0.7);
    /* Hover de botones */
    --section1-btn-hover-color: rgba(128, 128, 128, 1);
    --section2-btn-hover-color: rgba(128, 128, 128, 1);
    --section3-btn-hover-color: rgba(128, 128, 128, 1);
    --section4-btn-hover-color: rgba(128, 128, 128, 1);
    --section5-btn-hover-color: rgba(128, 128, 128, 1);
    --hover-width: 40%;
    --other-width: 15%;
    --speed: 500ms;
  }

  .five-split-container {
    position: relative;
    width: 100%;
    height: 400px; /* Altura fija para desktop */
    display: flex;
    overflow: hidden;
  }

  .split-section {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* Optimized: only transition the property that changes */
    transition: flex var(--speed) ease-in-out;
    overflow: hidden;
    /* Hardware acceleration */
    will-change: flex;
    transform: translateZ(0);
  }

  /* Background images now handled by <img> tags for lazy loading */
  .section-bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    /* Smooth image rendering on mobile */
    image-rendering: -webkit-optimize-contrast;
  }

  .section-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .split-section::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
    /* Optimized: only transition background-color */
    transition: background-color var(--speed) ease-in-out;
    will-change: background-color;
  }

  .section1::before {
    background-color: var(--section1-bg-color);
  }

  .section2::before {
    background-color: var(--section2-bg-color);
  }

  .section3::before {
    background-color: var(--section3-bg-color);
  }

  .section4::before {
    background-color: var(--section4-bg-color);
  }

  .section5::before {
    background-color: var(--section5-bg-color);
  }

  /* Efecto zoom en desktop (hover) */
  .split-section:hover {
    flex: 3;
  }
  .split-section:hover::before {
    background-color: rgba(128, 128, 128, 0);
  }

  .split-section h2 {
    font-size: 2rem;
    color: #fff;
    position: relative;
    z-index: 1;
    margin-bottom: 1.5rem;
    text-align: center;
    opacity: 1;
    transform: translateY(0);
    transition: all var(--speed) ease;
  }

  .split-section .btn {
    position: relative;
    z-index: 1;
    display: inline-block;
    text-decoration: none;
    color: #fff;
    border: #fff solid 0.15rem;
    font-size: 1rem;
    font-weight: bold;
    text-transform: uppercase;
    padding: 0.75rem 1.5rem;
    transition: all 0.3s ease;
    opacity: 1;
    transform: translateY(0);
  }

  .section1 .btn:hover {
    background-color: var(--section1-btn-hover-color);
    border-color: var(--section1-btn-hover-color);
  }
  .section2 .btn:hover {
    background-color: var(--section2-btn-hover-color);
    border-color: var(--section2-btn-hover-color);
  }
  .section3 .btn:hover {
    background-color: var(--section3-btn-hover-color);
    border-color: var(--section3-btn-hover-color);
  }
  .section4 .btn:hover {
    background-color: var(--section4-btn-hover-color);
    border-color: var(--section4-btn-hover-color);
  }
  .section5 .btn:hover {
    background-color: var(--section5-btn-hover-color);
    border-color: var(--section5-btn-hover-color);
  }

  /* Estilos para vista móvil */
  @media (max-width: 768px) {
    .five-split-container {
      flex-direction: column;
      height: 400px; /* Altura fija para que el efecto flex funcione */
    }
    
    .split-section {
      flex: 1;
      transition: flex var(--speed) ease-in-out;
    }
    
    /* Al tocar, se añade la clase active y se simula el zoom aumentando la proporción del flex */
    .split-section.active {
      flex: 3;
    }
    
    .split-section:not(.active) h2 {
      opacity: 0.8;
      transform: scale(0.9);
    }
    
    .split-section:not(.active) .btn {
      opacity: 0;
      transform: translateY(10px);
    }
    
    .split-section h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
    
    .split-section .btn {
      padding: 0.5rem 1rem;
      font-size: 0.8rem;
    }
  }
  
  @media (max-width: 480px) {
    .five-split-container {
      height: 300px; /* Ajuste para dispositivos muy pequeños */
    }
    
    .split-section:not(.active) h2 {
      font-size: 1.2rem;
    }
  }
</style>

<script defer>
(function() {
  'use strict';

  function init() {
    const sections = document.querySelectorAll('.split-section');
    const isMobile = window.matchMedia('(max-width: 768px)').matches;

    // Only add interaction on mobile
    if (!isMobile) return;

    function resetActiveSections() {
      sections.forEach(s => s.classList.remove('active'));
    }

    // Mobile: tap to activate section
    sections.forEach(section => {
      section.addEventListener('click', function(event) {
        if (this.classList.contains('active')) {
          // Already active, allow navigation
          return;
        }
        event.preventDefault();
        resetActiveSections();
        this.classList.add('active');
      }, { passive: false }); // passive: false because we use preventDefault
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

