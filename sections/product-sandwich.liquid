{% comment %}
  Product Sandwich Section
  - Título editable
  - Banner estático superior
  - Scroll horizontal de productos
  Optimizado para Core Web Vitals
{% endcomment %}

{{ 'component-card.aio.min.css' | asset_url | stylesheet_tag }}
{{ 'component-price.aio.min.css' | asset_url | stylesheet_tag }}

<div class="product-sandwich-section section-{{ section.id }}-padding">

  {%- comment -%} TÍTULO SECCIÓN {%- endcomment -%}
  {%- if section.settings.section_title != blank -%}
    <div class="sandwich-title-wrapper">
      <h2 class="sandwich-title" style="font-size: {{ section.settings.title_size }}px;">
        {{ section.settings.section_title }}
      </h2>
    </div>
  {%- endif -%}

  {%- comment -%} BANNER SUPERIOR (ESTÁTICO) {%- endcomment -%}
  <div class="carousel-wrapper">
    {%- if section.settings.carousel_image != blank -%}
      <img
        src="{{ section.settings.carousel_image | image_url: width: 2000 }}"
        alt="{{ section.settings.section_title | default: 'Banner' }}"
        loading="lazy"
        decoding="async"
        class="carousel-image-static"
        width="2000"
        height="38"
      >
    {%- else -%}
      <div class="carousel-placeholder">Agregar imagen del banner</div>
    {%- endif -%}
  </div>

  {%- comment -%} PRODUCTOS (Scroll Horizontal) {%- endcomment -%}
  <div class="products-wrapper">
    <div class="products-scroll" id="sandwich-scroll-{{ section.id }}">
      {%- for block in section.blocks -%}
        {%- if block.type == 'product' and block.settings.product != blank -%}
          <div class="product-item" {{ block.shopify_attributes }}>
            {% render 'card-product',
              card_product: block.settings.product,
              media_aspect_ratio: section.settings.image_ratio,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating
            %}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>

</div>

<style>
/* === CONTENEDOR PRINCIPAL === */
.product-sandwich-section {
  width: 100%;
  overflow: hidden;
  isolation: isolate;
}

.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

/* === TÍTULO === */
.sandwich-title-wrapper {
  width: 100%;
  text-align: {{ section.settings.title_alignment }};
  padding: 0 1.5rem;
  margin-bottom: {{ section.settings.title_spacing }}px;
}

.sandwich-title {
  margin: 0;
  color: {{ section.settings.title_color }};
  font-weight: 600;
  line-height: 1.2;
}

@media screen and (min-width: 750px) {
  .sandwich-title-wrapper {
    padding: 0 2rem;
  }
}

/* === BANNER ESTÁTICO === */
.product-sandwich-section .carousel-wrapper {
  width: 100%;
  height: 1cm;
  overflow: hidden;
  background-color: {{ section.settings.carousel_bg_color }};
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-sandwich-section .carousel-image-static {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.product-sandwich-section .carousel-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(var(--color-foreground), 0.5);
  font-size: 0.8rem;
}

/* === PRODUCTOS === */
.products-wrapper {
  width: 100%;
  padding-top: {{ section.settings.spacing_top }}px;
  padding-bottom: {{ section.settings.spacing_bottom }}px;
}

.products-scroll {
  display: flex;
  gap: 1.5rem;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: rgba(var(--color-foreground), 0.3) transparent;

  /* ARREGLADO: Padding solo a los lados para que primer producto sea visible */
  padding-left: 1.5rem;
  padding-right: 1.5rem;
}

/* Scrollbar webkit */
.products-scroll::-webkit-scrollbar {
  height: 8px;
}

.products-scroll::-webkit-scrollbar-track {
  background: transparent;
}

.products-scroll::-webkit-scrollbar-thumb {
  background-color: rgba(var(--color-foreground), 0.3);
  border-radius: 4px;
}

.product-item {
  flex: 0 0 auto;
  width: calc(50% - 0.75rem); /* Móvil: 2 productos visibles */
  min-width: 200px;
  max-width: 350px;
}

/* === TABLET === */
@media screen and (min-width: 750px) {
  .product-item {
    width: calc(33.333% - 1rem);
  }
}

/* === DESKTOP === */
@media screen and (min-width: 990px) {
  .products-scroll {
    justify-content: center;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  /* 4 productos: Todos visibles */
  .products-scroll:has(.product-item:nth-child(4):last-child) {
    overflow-x: visible;
  }

  .products-scroll:has(.product-item:nth-child(4):last-child) .product-item {
    width: calc(25% - 1.125rem);
  }

  /* 5 productos: Todos visibles */
  .products-scroll:has(.product-item:nth-child(5):last-child) .product-item {
    width: calc(20% - 1.2rem);
  }

  /* 6 productos: Todos visibles */
  .products-scroll:has(.product-item:nth-child(6):last-child) .product-item {
    width: calc(16.666% - 1.25rem);
  }
}

/* === ACCESIBILIDAD === */
@media (prefers-reduced-motion: reduce) {
  .product-sandwich-section .carousel-track {
    animation: none;
  }

  .products-scroll {
    scroll-behavior: auto;
  }
}
</style>

{% schema %}
{
  "name": "Product Sandwich",
  "tag": "section",
  "class": "section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "header",
      "content": "Título de la Sección"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Título",
      "default": "Productos Destacados"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 16,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Tamaño del título",
      "default": 32
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Color del título",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Alineación del título",
      "options": [
        {
          "value": "left",
          "label": "Izquierda"
        },
        {
          "value": "center",
          "label": "Centro"
        },
        {
          "value": "right",
          "label": "Derecha"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "title_spacing",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Espacio debajo del título",
      "default": 24
    },
    {
      "type": "header",
      "content": "Banner"
    },
    {
      "type": "image_picker",
      "id": "carousel_image",
      "label": "Imagen del banner",
      "info": "Recomendado: 2000px ancho × 40px alto (imagen ancha para pantallas grandes)"
    },
    {
      "type": "color",
      "id": "carousel_bg_color",
      "label": "Color de fondo",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Arriba (banner → productos)",
      "default": 32,
      "info": "0px = sin espacio"
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Abajo (productos)",
      "default": 32,
      "info": "0px = sin espacio"
    },
    {
      "type": "header",
      "content": "Productos"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adaptarse a imagen"
        },
        {
          "value": "portrait",
          "label": "Retrato"
        },
        {
          "value": "square",
          "label": "Cuadrado"
        }
      ],
      "default": "adapt",
      "label": "Proporción de imagen"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Mostrar segunda imagen al pasar cursor"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Mostrar marca"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Mostrar calificación"
    },
    {
      "type": "header",
      "content": "Márgenes Sección"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen superior",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margen inferior",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Producto",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Seleccionar producto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Sandwich",
      "category": "Productos",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
