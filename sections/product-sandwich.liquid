{% comment %}
  Sección Sandwich: Carruseles + Productos
  - Carrusel superior (derecha a izquierda)
  - Grid de productos en el medio
  - Carrusel inferior (izquierda a derecha)
  Optimizado para Core Web Vitals en móvil
{% endcomment %}

{{ 'component-card.aio.min.css' | asset_url | stylesheet_tag }}
{{ 'component-price.aio.min.css' | asset_url | stylesheet_tag }}

<div class="product-sandwich-section section-{{ section.id }}-padding">

  {%- comment -%} CARRUSEL SUPERIOR (Derecha a Izquierda) {%- endcomment -%}
  <div class="carousel-wrapper carousel-top">
    <div class="carousel-track carousel-track-rtl" style="animation-duration: {{ section.settings.carousel_speed }}s;">
      {%- if section.settings.carousel_image != blank -%}
        {%- for i in (1..20) -%}
          <img
            src="{{ section.settings.carousel_image | image_url: width: 400 }}"
            alt="Carousel decoration"
            loading="lazy"
            decoding="async"
            class="carousel-image"
            width="400"
            height="38"
          >
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} Placeholder si no hay imagen {%- endcomment -%}
        <div class="carousel-placeholder">No image selected</div>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} PRODUCTOS EN EL MEDIO - Scroll horizontal {%- endcomment -%}
  <div class="product-sandwich-wrapper">
    <div class="product-sandwich-scroll">
      {%- for block in section.blocks -%}
        {%- if block.type == 'product' and block.settings.product != blank -%}
          {%- assign product = block.settings.product -%}
          <div class="product-sandwich-item" {{ block.shopify_attributes }}>
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating
            %}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>

  {%- comment -%} CARRUSEL INFERIOR (Izquierda a Derecha) {%- endcomment -%}
  <div class="carousel-wrapper carousel-bottom">
    <div class="carousel-track carousel-track-ltr" style="animation-duration: {{ section.settings.carousel_speed }}s;">
      {%- if section.settings.carousel_image != blank -%}
        {%- for i in (1..20) -%}
          <img
            src="{{ section.settings.carousel_image | image_url: width: 400 }}"
            alt="Carousel decoration"
            loading="lazy"
            decoding="async"
            class="carousel-image"
            width="400"
            height="38"
          >
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} Placeholder si no hay imagen {%- endcomment -%}
        <div class="carousel-placeholder">No image selected</div>
      {%- endif -%}
    </div>
  </div>

</div>

<style>
/* Aislamiento de estilos con prefijo único para evitar conflictos */
.product-sandwich-section {
  width: 100%;
  overflow: hidden;
  isolation: isolate; /* Aísla estilos de otras secciones */
}

.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}

/* CARRUSEL STYLES - Prefijo específico para evitar conflictos */
.product-sandwich-section .carousel-wrapper {
  width: 100%;
  height: 1cm; /* 37.8px */
  overflow: hidden;
  position: relative;
  background-color: {{ section.settings.carousel_bg_color }};
}

.product-sandwich-section .carousel-track {
  display: flex;
  height: 100%;
  width: max-content;
  /* Hardware acceleration for smooth animation on mobile */
  will-change: transform;
  transform: translateZ(0);
  backface-visibility: hidden;
}

/* Animación: Derecha a Izquierda (RTL) */
.product-sandwich-section .carousel-track-rtl {
  animation: scrollRTL-{{ section.id }} linear infinite;
}

@keyframes scrollRTL-{{ section.id }} {
  0% {
    transform: translateX(0) translateZ(0);
  }
  100% {
    transform: translateX(-50%) translateZ(0);
  }
}

/* Animación: Izquierda a Derecha (LTR) */
.product-sandwich-section .carousel-track-ltr {
  animation: scrollLTR-{{ section.id }} linear infinite;
}

@keyframes scrollLTR-{{ section.id }} {
  0% {
    transform: translateX(-50%) translateZ(0);
  }
  100% {
    transform: translateX(0) translateZ(0);
  }
}

.product-sandwich-section .carousel-image {
  height: 100%;
  width: auto;
  object-fit: cover;
  flex-shrink: 0;
}

.product-sandwich-section .carousel-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(var(--color-foreground), 0.5);
  font-size: 0.8rem;
}

/* PRODUCTOS - Scroll horizontal con flechas */
.product-sandwich-wrapper {
  width: 100%;
  padding: 2rem 0;
  overflow: hidden;
}

.product-sandwich-scroll {
  display: flex;
  gap: 1.5rem;
  overflow-x: auto;
  overflow-y: hidden;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: rgba(var(--color-foreground), 0.3) transparent;
  padding: 0 1.5rem;
  justify-content: center; /* Centra los productos */
}

/* Estilo de scrollbar para webkit */
.product-sandwich-scroll::-webkit-scrollbar {
  height: 8px;
}

.product-sandwich-scroll::-webkit-scrollbar-track {
  background: transparent;
}

.product-sandwich-scroll::-webkit-scrollbar-thumb {
  background-color: rgba(var(--color-foreground), 0.3);
  border-radius: 4px;
}

.product-sandwich-scroll::-webkit-scrollbar-thumb:hover {
  background-color: rgba(var(--color-foreground), 0.5);
}

.product-sandwich-item {
  flex: 0 0 auto;
  width: calc((100% - 1.5rem) / 2); /* 2 items en móvil */
  min-width: 200px;
  max-width: 350px;
}

/* Tablet: 3 items */
@media screen and (min-width: 750px) {
  .product-sandwich-item {
    width: calc((100% - 3rem) / 3);
  }

  .product-sandwich-wrapper {
    padding: 3rem 0;
  }
}

/* Desktop: Ajuste automático basado en cantidad de productos */
@media screen and (min-width: 990px) {
  .product-sandwich-scroll {
    padding: 0 2rem;
  }

  /* Si hay 4 productos o menos, mostrarlos todos sin scroll */
  .product-sandwich-scroll:has(.product-sandwich-item:nth-child(4):last-child) {
    justify-content: center;
    overflow-x: visible;
  }

  .product-sandwich-scroll:has(.product-sandwich-item:nth-child(4):last-child) .product-sandwich-item {
    width: calc((100% - 4.5rem) / 4);
  }

  /* 5 productos */
  .product-sandwich-scroll:has(.product-sandwich-item:nth-child(5):last-child) .product-sandwich-item {
    width: calc((100% - 6rem) / 5);
  }

  /* 6 productos */
  .product-sandwich-scroll:has(.product-sandwich-item:nth-child(6):last-child) .product-sandwich-item {
    width: calc((100% - 7.5rem) / 6);
  }
}

/* Reduce motion for accessibility */
@media (prefers-reduced-motion: reduce) {
  .product-sandwich-section .carousel-track {
    animation: none;
  }

  .product-sandwich-scroll {
    scroll-behavior: auto;
  }
}
</style>

{% schema %}
{
  "name": "Product Sandwich",
  "tag": "section",
  "class": "section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "header",
      "content": "Carrusel Settings"
    },
    {
      "type": "image_picker",
      "id": "carousel_image",
      "label": "Imagen del carrusel",
      "info": "Se repite horizontalmente. Recomendado: 400px de ancho"
    },
    {
      "type": "color",
      "id": "carousel_bg_color",
      "label": "Color de fondo del carrusel",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "carousel_speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "s",
      "label": "Velocidad del carrusel",
      "default": 30,
      "info": "Bajo: 50-60s, Medio: 25-35s, Alto: 10-20s"
    },
    {
      "type": "header",
      "content": "Product Grid Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 4,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Columnas en desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "2",
          "label": "2 columnas"
        }
      ],
      "default": "2",
      "label": "Columnas en móvil"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "adapt",
      "label": "Image ratio"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Show second image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show product rating"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Sandwich",
      "category": "Custom",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
